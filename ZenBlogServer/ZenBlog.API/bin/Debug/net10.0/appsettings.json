{
  "ConnectionStrings": {
    "ZenBlogConnection": "Host=localhost;Port=5432;Database=zenblog;Username=postgres;Password=postgres"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "HttpsRedirection": {
    "Enabled": true
  },
  "Redis": {
    "Enabled": true,
    "ConnectionString": "localhost:6379"
  },
  "Jwt": {
    "Issuer": "ZenBlog",
    "Audience": "ZenBlogClient",
    "SecretKey": "CHANGE_ME_TO_A_LONG_RANDOM_SECRET_KEY_32+_CHARS"
  },
  "EmailParameters": {
    "Host": "smtp.example.com",
    "Port": 587,
    "EnableSsl": true,
    "From": "no-reply@example.com",
    "Username": "no-reply@example.com",
    "AppPassword": "CHANGE_ME"
  },
  "ClientAppUrls": {
    "BaseUrl": "http://localhost:4200",
    "VerifyEmailPath": "/verify-email",
    "ResetPasswordPath": "/reset-password"
  },
  "GoogleAuth": {
    "ClientId": "CHANGE_ME"
  },
  "RabbitMq": {
    "Enabled": true,
    "Host": "localhost",
    "Port": 5672,
    "VirtualHost": "/",
    "Username": "zenblog",
    "Password": "zenblog"
  },
  "Storage": {
    "Provider": "S3"
  },
  "AwsS3": {
    "Enabled": true,
    "Region": "us-east-1",
    "BucketName": "zenblog-local",
    "KeyPrefix": "uploads/",
    "MakePublic": true,
    "ServiceUrl": "http://localhost:4566",
    "ForcePathStyle": true,
    "PublicBaseUrl": "http://localhost:4566/zenblog-local"
  },
  "AllowedHosts": "*",
  "OpenApi": {
    "Enabled": true
  },
  "Database": {
    "MigrateOnStartup": true
  }
}